<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TetrisActivity"
    android:weightSum="1"
    android:background="#313842"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4px"
        android:background="#313842"
        android:layout_weight="1">
        <com.hcd.itetris.view.GameView
            android:id="@+id/gameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#313842" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="8"
            android:background="#313842">
            <com.hcd.itetris.view.ShapePreview
                android:id="@+id/shapePreview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关卡"
                android:textSize="12dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/checkPointsTextView" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:id="@+id/checkPointsEditText"
                android:editable="false"
                android:textSize="12dp"
                android:enabled="false"
                android:focusable="false"
                android:background="@drawable/edit_text"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="级别"
                android:textSize="12dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/levelTextView" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:id="@+id/levelEditText"
                android:editable="false"
                android:textSize="12dp"
                android:enabled="false"
                android:focusable="false"
                android:background="@drawable/edit_text"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="得分"
                android:textSize="12dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/scoreTextView" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:id="@+id/scoreEditText"
                android:editable="false"
                android:textSize="12dp"
                android:enabled="false"
                android:focusable="false"
                android:background="@drawable/edit_text"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="速度"
                android:textSize="12dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/speedTextView" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:id="@+id/speedEditText"
                android:editable="false"
                android:textSize="12dp"
                android:enabled="false"
                android:focusable="false"
                android:background="@drawable/edit_text"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnStart"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:text="开始"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂停"
                android:id="@+id/btnPause"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnMain"
                android:text="菜单"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#313842"
        android:layout_weight="9">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="向左"
            android:id="@+id/btnLeft"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="向右"
            android:id="@+id/btnRight"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="旋转"
            android:id="@+id/btnRotate"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="向下"
            android:id="@+id/btnDown"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="直下"
            android:id="@+id/btnGoDown"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button"/>
    </LinearLayout>
</LinearLayout>
